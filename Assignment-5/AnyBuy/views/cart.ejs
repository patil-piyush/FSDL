<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart | AnyBuy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { background-color: #ffffff; }
        .product-img { width: 90px; height: 120px; object-fit: cover; background: #f0f0f0; }
        .cart-card { border: none; border-bottom: 1px solid #f0f0f0; transition: all 0.3s ease; }
        .cart-card:hover { background-color: #fafafa; }
        .summary-card { border: 1px solid #f0f0f0; border-radius: 0; box-shadow: 0 10px 30px rgba(0,0,0,0.02); }
        .sticky-top { top: 120px; }
        .bill-details { font-family: 'Inter', sans-serif; font-size: 0.9rem; }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand fs-2" href="/home">ANYBUY.</a>
            <div class="ms-auto">
                <a href="/home" class="btn btn-sm btn-outline-dark rounded-0 text-uppercase ls-1">Continue Shopping</a>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <h2 class="display-6 fw-bold mb-5">Shopping Bag</h2>

        <% if(cart.items.length === 0) { %>
            <div class="text-center py-5">
                <i class="fa-solid fa-bag-shopping fa-2x mb-3 text-muted"></i>
                <p class="lead fw-light">Your bag is empty.</p>
                <a href="/home" class="btn btn-dark rounded-0 px-5 mt-3">Explore Collections</a>
            </div>
        <% } else { %>
            <div class="row g-5">
                <div class="col-lg-8">
                    <% let subtotal_sum = 0; %>
                    <% cart.items.forEach(item => { %>
                        <% 
                           let itemPrice = parseFloat(item.productId.price);
                           let itemSubtotal = itemPrice * item.quantity;
                           subtotal_sum += itemSubtotal;

                           // Corrected image path access
                           let imageUrl = (item.productId.images && item.productId.images.length > 0) 
                                          ? item.productId.images[0].url 
                                          : 'https://via.placeholder.com/150';
                        %>
                        <div class="card cart-card mb-2 bg-transparent">
                            <div class="card-body px-0">
                                <div class="row align-items-center">
                                    <div class="col-3 col-md-2">
                                        <img src="<%= imageUrl %>" class="product-img" alt="<%= item.productId.name %>">
                                    </div>
                                    <div class="col-5 col-md-7 px-4">
                                        <h6 class="text-uppercase fw-bold mb-1"><%= item.productId.name %></h6>
                                        <p class="text-muted small mb-0">Quantity: <%= item.quantity %></p>
                                        <p class="text-muted small">Unit Price: $<%= itemPrice.toFixed(2) %></p>
                                    </div>
                                    <div class="col-4 col-md-3 text-end">
                                        <p class="fw-bold mb-0 fs-5">$<%= itemSubtotal.toFixed(2) %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <div class="col-lg-4">
                    <div class="card summary-card sticky-top p-3">
                        <div class="card-body">
                            <h5 class="fw-bold mb-4 text-uppercase ls-1">Order Summary</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Subtotal</span>
                                <span>$<%= subtotal_sum.toFixed(2) %></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Shipping</span>
                                <span class="text-success small fw-bold">COMPLIMENTARY</span>
                            </div>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="text-muted">Estimated Tax (5%)</span>
                                <span>$<%= (subtotal_sum * 0.05).toFixed(2) %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <strong class="fs-5">Total</strong>
                                <strong class="fs-5">$<%= (subtotal_sum * 1.05).toFixed(2) %></strong>
                            </div>
                            
                            <button class="btn btn-dark w-100 py-3 rounded-0 fw-bold ls-2" data-bs-toggle="modal" data-bs-target="#checkoutModal">
                                PROCEED TO CHECKOUT
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <div class="modal fade" id="checkoutModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-0 border-0">
                <div class="modal-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fa-solid fa-check-circle text-success fs-1"></i>
                        </div>
                        <h4 class="fw-bold">Payment Confirmed</h4>
                        <p class="text-muted small">Your order has been placed successfully.</p>
                    </div>
                    
                    <div class="bill-details p-4 bg-light">
                        <div class="text-center mb-3 pb-3 border-bottom">
                            <h6 class="fw-bold m-0">ANYBUY INVOICE</h6>
                            <small class="text-muted">ID: #AB-<%= Math.floor(Math.random() * 90000) + 10000 %></small>
                        </div>
                        
                        <% if(cart.items.length > 0) { %>
                            <% let total_paid = 0; %>
                            <% cart.items.forEach(item => { %>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="small"><%= item.productId.name %> (x<%= item.quantity %>)</span>
                                    <span class="small">$<%= (item.productId.price * item.quantity).toFixed(2) %></span>
                                </div>
                                <% total_paid += (item.productId.price * item.quantity); %>
                            <% }) %>
                            <div class="border-top mt-3 pt-2 d-flex justify-content-between fw-bold">
                                <span>TOTAL PAID</span>
                                <span>$<%= (total_paid * 1.05).toFixed(2) %></span>
                            </div>
                        <% } %>
                    </div>

                    <div class="mt-4 gap-2 d-flex flex-column">
                        <button class="btn btn-dark rounded-0 w-100" onclick="location.href='/home'">Continue Shopping</button>
                        <button class="btn btn-link text-dark text-decoration-none small w-100" onclick="window.print()">Print Receipt</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>