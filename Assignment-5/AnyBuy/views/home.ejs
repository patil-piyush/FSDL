<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Collection | AnyBuy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/home">ANYBUY.</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <% if (user) { %>
                        <li class="nav-item"><span class="nav-link text-muted">Welcome, <%= user.name %></span></li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cart">
                                <i class="bi bi-bag"></i> Cart
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a href="/auth/logout" class="btn btn-outline-dark btn-sm">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Login</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a href="/auth/register" class="btn btn-dark btn-sm">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-light py-5 mb-5 text-center">
        <div class="container">
            <h1 class="display-4">New Arrivals</h1>
            <p class="lead text-muted">Summer Collection 2025</p>
        </div>
    </header>

    <div class="container mb-5">
        <div class="row g-4">
            <% if(products.length === 0) { %>
                <div class="col-12 text-center py-5">
                    <h3 class="text-muted">No products found. Run the seed script!</h3>
                </div>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="card product-card h-100">
                            <div class="product-img-wrapper">
                                <img src="<%= product.images[0].url %>" alt="<%= product.name %>">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <span class="text-muted small text-uppercase mb-1"><%= product.category %></span>
                                <h5 class="card-title mb-2"><%= product.name %></h5>
                                <p class="price-tag mb-3">$<%= product.price.toFixed(2) %></p>
                                
                                <form action="/cart" method="POST" class="mt-auto">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button class="btn btn-primary w-100">
                                        <i class="bi bi-plus-lg me-1"></i> Add to Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-4 mt-auto">
        <p class="mb-0">&copy; 2025 AnyBuy Fashion Store. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>